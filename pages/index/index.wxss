/**index.wxss**/

.header {
  height: 400rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.btnUserInfo{
  height: 150rpx;
  line-height: 150rpx;
  background-color: white;
  color:#52d0ca;
}
.body {
  height: 600rpx;
  width: 100%;
  background-color: blue;
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  align-items: center;
}

.item_large {
  margin-top: 3%;
  width: 94%;
  padding-top: 45rpx;
  padding-bottom: 40rpx;
  height: 310rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.smallContainer{
  width: 97%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.item_small {
  padding-top: 80rpx;
  padding-bottom: 60rpx;
  margin-top: 3%;
  height: 310rpx;
  width: 94%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  background-color: white;
}

