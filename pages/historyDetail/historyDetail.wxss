/* pages/activityDetail/activityDetail.wxss */

.item_image {
  width: 100%;
  height: 300rpx;
  background-color: pink;
}

.item_width {
  width: 100%;
}

.item_view {
  width: 90%;
  height: fit-content;
}

.timeContainer {
  margin-top: 5%;
  width: 100%;
  background-color: white;
}

.time-bg {
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
}

.brief-bg {
  padding-bottom: 30rpx;
  padding-top: 30rpx;
  width: 94%;
  line-height: 30rpx;
}

.time-line {
  border-bottom: thin solid #f5f5f5;
}

.bm_bg {
  background-color: #52d0ca;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.bm_btn {
  font-size: 30rpx;
  line-height: 100rpx;
  color: white;
}

.timeContainer2 {
  width: 90%;
  color: #444;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 24rpx;
  height: 50rpx;
  
}

.time {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.timeView2 {
  display: flex;
  flex-direction: row;
  align-items: center;
  line-height: 50rpx;
}

.point {
  width: 8rpx;
  height: 8rpx;
  background-color: #52d0ca;
  border-radius: 8rpx;
  margin-right: 10rpx;
}

.HLine {
   background-color: hsl(0, 0%, 93%);
  width: 32rpx;
  height: 1rpx;
  align-self: center;
}

.Vline {
  background-color: #f5f5f5;
  height: 1rpx;
  width: 100%;
}
